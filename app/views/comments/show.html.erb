  <h3>商品一覧</h3> 
  <h3>ログアウト</h3> 
</div>  

<div id="contents"> 
<h2>
  <%= link_to "topへ", :controller => "items", :action => "index"  %>
</h2>
<h2>
  意見: <%= @comment.content %>
  <div>
</div>
</h2>

<div id="contents">
  <div id="article_list"> 
    <div> 
      <div> 
        <div id="article_wrap"> 
            <h2>
            <%=  @comment.content %>
            </h2>
            <p>
              <%= link_to "ユーザーの詳細", :controller => "items", :action => "index"  %>
            </p>
            <p>
              <%= link_to "スカウトを送る", :controller => "comments", :action => "show", :id => @comment.id  %>
            </p>
            <% if @comment.id % 2 == 0%>
              <img src="/post_images/red.png" width="30px" />
            <% else %>
              <img src="/post_images/black.png" width="30px" />
            <% end %>
          </div>
    </div>
    </div>
  </div>  
</div>


  <p>
    <%= link_to "ツイート更新", {:controller => "tweets", :action => "get_tweets"}, method: :get %>
  </p>
  <p>
    <% if @content_type %>
      <%= link_to "テキスト表示", {:controller => "comments", :action => "show", :id => @comment.id, :tweet_screen => false}, method: :get %>
    <% else %>
      <%= link_to "ツイート表示", {:controller => "comments", :action => "show", :id => @comment.id, :tweet_screen => true}, method: :get %>
    <% end %>
　 </p>

  <div>
    <table ~~~ style="table-layout:fixed;width:100%;" class="<%"sample" if true %>">

    
      <colgroup>
        <col style="width:50%;">
        <col style="width:20%;">
        <col style="width:30%;">
      </colgroup>
      <tr>
        <th>このユーザーのツイート</th><th></th><th>日時</th>
      </tr>
    <% @tweets.each do |tweet| %>
        <tr>
        <td ~~~  style="word-wrap:break-word;>
          <% if @content_type %>
            <%= link_to tweet.html_content.html_safe, :controller => "tweets", :action => "show", :id => tweet.id%>
          <% else %>
            <%= link_to tweet.content.html_safe, :controller => "tweets", :action => "show", :id => tweet.id%>
          <% end %>
        </td>
        <td ~~~ >
          <%= (tweet.item && tweet.item.name) || '' %>
        </td>
        <td>
          <%= (tweet.created_at.to_s.split('+')[0]) || '' %>
        </td>  
        </tr>    
    <% end %>
   </div>
  </table>
</div>  
  

  
  
