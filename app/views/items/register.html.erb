<h2>人物登録</h2>
<h2>
  <%= link_to "topへ", :controller => "items", :action => "index"  %>
</h2>

<div>
  <%= form_tag("/items/create", :method => :post, :multipart => true) do %>
    画像を選択
    <%= file_field_tag :file, accept: 'image/jpg,image/jpeg,image/png' %>
    <div>
      <input id="register_name_field" name="name" type="text" placeholder="名前"/>
    </div>
    <div>
      <input id="register_tweeter_field" name="twitter" type="text" placeholder="ツイッターid(@なし)"/>
    </div>
    <div>
      <p>メモ</p>
      <textarea id="register_content_field" name="content" type="text" placeholder="メモ" /></textarea>
    </div>

    <%= submit_tag("登録する") %>
  <% end %>
</div>