<div id="wrapper">  
<h1 class="top_title">tweet 一覧</h1>
<!--sidebar部分-->  
<div id="sidebar-top">  
  <div>コメント一覧</div> 
  <div>商品一覧</div> 
  <div>ログアウト</div> 
</div>  

<div id="contents">  
  <p>
    <%= link_to "ツイート作成", {:controller => "tweets", :action => "register"}, method: :get %>
  </p>

  <div>
    <table ~~~ style="table-layout:fixed;width:100%;">
      <colgroup>
        <col style="width:50%;">
        <col style="width:20%;">
        <col style="width:30%;">
      </colgroup>
      <tr>
        <th>ツイート</th><th>商品名</th><th>日時</th>
      </tr>
    <% @tweets.each do |tweet| %>
        <tr>
        <td ~~~  style="word-wrap:break-word;>
          <%= link_to tweet.content, :controller => "tweets", :action => "show", :id => tweet.id%>
        </td>
        <td ~~~ >
          <%= (tweet.item && tweet.item.name) || '' %>
        </td>
        <td>
          <%= (tweet.created_at) || '' %>
        </td>  
        </tr>    
    <% end %>
   </div>
  </table>
</div>  
  

  
  
</div>  

